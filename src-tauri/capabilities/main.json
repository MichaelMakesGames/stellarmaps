{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:default",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$APPCONFIG/settings.json" }]
    },
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$APPCONFIG/settings.json" }]
    },
    "fs:allow-watch",
    "fs:allow-unwatch",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ]
}